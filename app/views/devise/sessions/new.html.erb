<div class="landing">
  <div class="welcome">
    <div class="introduction">
      <%= image_tag("shared/logolanding.png") %>
      <p>Social networking app to keep your followers up to date with your latest annoucements, updates and news.
    </div>
  </div>
  <div class="sign-in">
    <div class="sign-in-box">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <div class="forgot-pw">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
            <% end %>
          </div>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="sign-in-options">
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Register", new_registration_path(resource_name), class: "btn ps-0" %><br />
          <% end %>
          <%= f.button :submit, "Log in", class: "barker-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
